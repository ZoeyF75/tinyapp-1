<h3>My URLs</h3>
<br>
<br>
<div class="table-responsive"></div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Date Created</th>
      <th scope="col">Unique Visitors</th>
      <th scope="col">Short URL</th>
      <th scope="col">Long URL</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let url in urls) { %>
      <tr>
            <td>
              <input disabled type="text" class="form-control" placeholder="<%= urls[url].dateCreated.toLocaleString('en-CA', { timeZone: 'America/Vancouver' }) %>">
            </td>
            <td>
              <input disabled type="text" class="form-control" placeholder="<%=Object.keys(urls[url].views).length %>"></td>
            <td>
              <a href="<%= url %>"><%= url %></a>
            </td>
            <td>
              <a href="<%= urls[url].longUrl %>"><%= urls[url].longUrl.split("://")[1] %></a>
            </td>
            <td>
              <form action="/urls/<%= url %>" method="get" style="display: inline">
                <button type="submit" class="btn btn-success">Details</button>
              </form>
              <form action="/urls/<%= url %>/edit" method="get" style="display: inline">
                <button type="submit" class="btn btn-primary">Edit</button>
              </form>
              <form action="/urls/<%= `${url}/delete` %>" method="post" style="display: inline">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
      </tr>
      <% } %>
  </tbody>
</table>
</div>
<style>
  :disabled{
    border-color: rgba(0, 0, 0, 0) !important;
    background-color: rgba(0, 0, 0, 0) !important;
  }
</style>